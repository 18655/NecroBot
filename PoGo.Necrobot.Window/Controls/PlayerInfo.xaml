<UserControl x:Class="PoGo.Necrobot.Window.Controls.PlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoGo.Necrobot.Window.Controls"
             mc:Ignorable="d" Height="185" Width="875">
    <Grid Margin="0,0,0,0">
        <TextBlock  Margin="35,12,640,148">
            <TextBlock.Text>
                <MultiBinding StringFormat="{} LEVEL : {0}" FallbackValue="Level : 40">
                    <Binding Path="Level" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <TextBlock  Margin="215,12,520,148">
            <TextBlock.Text>
                <MultiBinding StringFormat="{} Current Level : {0}/{1}" FallbackValue="Current Level:40">
                    <Binding Path="Exp" />
                    <Binding Path="LevelExp" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="35,42,0,0" TextWrapping="Wrap" Text="{Binding Path=EXPPerHour, FallbackValue=EXP/H: 123, StringFormat=EXP/H :{0}}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="215,42,0,0" TextWrapping="Wrap" Text="{Binding Path=PKMPerHour, FallbackValue=PKM/H: 123 ,StringFormat=PKM/H :{0}}" VerticalAlignment="Top" RenderTransformOrigin="6.212,4.375"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="35,63,0,0" TextWrapping="Wrap" Text="{Binding Runtime, FallbackValue=Runtime: xx:xx:xx:xx, StringFormat=Runtime : {0}}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="400,12,0,0" TextWrapping="Wrap" Text="{Binding TimeToLevelUp, FallbackValue=Level Up in :1d 24h, StringFormat=Level Up in {0}}" VerticalAlignment="Top" RenderTransformOrigin="-0.51,0.5"/>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="596,15,0,0" TextWrapping="Wrap" Text="{Binding Startdust, FallbackValue=Startdust: 90000, StringFormat=Startdust : \{0\}}" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
