<UserControl x:Class="PoGo.Necrobot.Window.Controls.PokemonInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoGo.Necrobot.Window.Controls"
             xmlns:cv="clr-namespace:PoGo.Necrobot.Window.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Control.Resources>
        <cv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <cv:FriendlyTransferTextConverter x:Key="FriendlyTransferTextConverter" />
    </Control.Resources>
    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnTransferAll" Margin="0,0,135,0" Content="Transfer All" Click="btnTransferAll_Click"/>
            <Button x:Name="btnFavoriteAll" Margin="0,0,135,0" Content="Favorite All"/>
        </StackPanel>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="gridData"   
               MaxHeight="800"
              EnableRowVirtualization="True"
              AutoGenerateColumns="false"
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch" 
              ItemsSource="{Binding Pokemons}" 
                  SelectionChanged="gridData_SelectionChanged"
                  VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="True" 
      ScrollViewer.VerticalScrollBarVisibility="Visible"
      ScrollViewer.HorizontalScrollBarVisibility="Visible" >
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{Binding IsSelected}" Header="Selected"/>
                    <DataGridTextColumn Binding="{Binding PokemonName}" Header="Name"/>
                    <DataGridTextColumn Binding="{Binding IV, StringFormat=\{0:0.00\}}" Header="IV"/>
                    <DataGridTextColumn Binding="{Binding CP, StringFormat=\{0\}}" Header="CP"/>
                    <DataGridTextColumn Binding="{Binding Level, StringFormat=\{0\}}" Header="Level"/>
                    <DataGridTextColumn Binding="{Binding HP, StringFormat=\{0\}}" Header="HP"/>
                    <DataGridTextColumn Binding="{Binding MaxHP, StringFormat=\{0\}}" Header="MaxHP"/>

                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel  Orientation="Horizontal"  >
                                    <Button Margin="0,0,10,0" Click="btnTransfer_Click" CommandParameter="{Binding Id}"  IsEnabled="{Binding Path=IsTransfering, Converter={StaticResource ResourceKey=InverseBooleanConverter}}" Content="{Binding Path=IsTransfering, Converter={StaticResource ResourceKey= FriendlyTransferTextConverter}}"/>
                                    <Button Margin="0,0,10,0" Content="Evolve"/>
                                    <Button Margin="0,0,10,0" Content="Power up"/>
                                    <Button Margin="0,0,10,0" IsEnabled="{Binding IsFavoried, Converter={StaticResource InverseBooleanConverter}}" Content="Favorite"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
        </DataGrid>
        </ScrollViewer>
    </StackPanel>
</UserControl>
